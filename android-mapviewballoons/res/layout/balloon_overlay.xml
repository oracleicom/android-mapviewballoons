<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/balloon_main_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/balloon_overlay_bg_selector"
    android:baselineAligned="false"
    android:gravity="center_vertical|center_horizontal"
    android:minWidth="75dp"
    android:orientation="horizontal"
    tools:ignore="UnusedResources">
    <LinearLayout
        android:id="@+id/balloon_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/balloon_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/balloon_item_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textSize="13sp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/balloon_disclosure"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical|right"
        android:contentDescription="@string/balloon_next"
        android:paddingLeft="5dp"
        android:src="@drawable/ic_ab_next_holo_light"
        android:visibility="gone"/>
</LinearLayout>